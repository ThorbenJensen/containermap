%html
  %head
    %meta{:charset => "utf-8"}/
    / Always force latest IE rendering engine or request Chrome Frame
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    / Use title if it's in the page YAML frontmatter
    %title= current_page.data.title
    = stylesheet_link_tag "normalize", "all", "https://api.tiles.mapbox.com/mapbox.js/v1.6.1/mapbox.css"
    = javascript_include_tag  "all", "glass_containers", "https://api.tiles.mapbox.com/mapbox.js/v1.6.1/mapbox.js", "//use.typekit.net/hlr7wrg.js"
    %script
      try{Typekit.load();}catch(e){}
  %body{:class => page_classes}
    = yield